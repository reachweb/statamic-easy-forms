{
    "name": "reachweb/statamic-easy-forms",
    "description": "Easy frontend forms for Statamic.",
    "keywords": [
        "Statamic",
        "Forms"
    ],
    "homepage": "https://easy-forms.dev/",
    "license": "proprietary",
    "type": "statamic-addon",
    "authors": [
        {
            "name": "Iosif Chatzimichail",
            "email": "iosif@reach.gr",
            "role": "Developer"
        }
    ],
    "support": {
        "email": "iosif@reach.gr"
    },
    "autoload": {
        "psr-4": {
            "Reach\\StatamicEasyForms\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Reach\\StatamicEasyForms\\Tests\\": "tests"
        }
    },
    "require": {
        "statamic/cms": "^5.0 | ^6.0"
    },
    "require-dev": {
        "orchestra/testbench": "^10.0",
        "pestphp/pest": "^4.1",
        "laravel/pint": "^1.25"
    },
    "suggest": {
        "google/recaptcha": "Required for reCAPTCHA v3 spam protection (~1.3)"
    },
    "config": {
        "allow-plugins": {
            "pixelfear/composer-dist-plugin": true,
            "pestphp/pest-plugin": true
        }
    },
    "extra": {
        "statamic": {
            "name": "Statamic Easy Forms",
            "description": "Easy frontend forms for Statamic."
        },
        "laravel": {
            "providers": [
                "Reach\\StatamicEasyForms\\ServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
